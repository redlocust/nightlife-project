extends layout

block content
    header.container.main-header
        .row
            .col-xs-6.col-xs-offset-3
                h1 Plans tonight?
                i.fa.fa-map-marker.main-header__icon
                i.fa.fa-cab.main-header__icon
                i.fa.fa-glass.main-header__icon
                p.main-header__text See which bars are hoppin' tonight and RSVP ahead of time! Remember: take a cab and drink responsibly.
    .container
        .row
            .col-lg-12
                form(method="post").form-inline
                    .form-group.col-xs-10
                        input(type="text", name="address", placeholder="Where you at?").form-control.input-normal
                    button.btn.btn-default.col-xs-2 GO

    .container
        .row
            .col-lg-12
                each item in itemList
                    .row.item-list
                        .col-xs-2.col-xs-offset-1
                            img.bar-item__image(src="#{item.image_url}")
                        .col-xs-7
                            a.bar-item__link #{item.name}
                            p: i #{item.snippet_text}

